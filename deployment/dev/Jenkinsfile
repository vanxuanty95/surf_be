pipeline {
    agent any

    stages {
        stage('checkout'){
            steps {
                git url: 'https://github.com/vanxuanty95/surf_be.git'
            }
        }
        stage('go build'){
            steps {
                sh 'docker run -i --rm -v $PWD:/go/src/surf_be/ -w /go/src/surf_be golang:1.16-alpine go build -mod vendor -v -o surf_be.bin .'
            }
        }
        stage('docker build'){
            steps {
            sh 'ssh vanxuanty95@hvanxuanty.ddns.net rm /home/vanxuanty95/Project/deploy/surf_be/bin/surf_be.bin'
            sh 'ssh vanxuanty95@hvanxuanty.ddns.net rm /home/vanxuanty95/Project/deploy/surf_be/Dockerfile'
            sh 'ssh vanxuanty95@hvanxuanty.ddns.net rm /home/vanxuanty95/Project/deploy/surf_be/docker-compose.yml'

            sh 'scp -r surf_be.bin vanxuanty95@hvanxuanty.ddns.net:/home/vanxuanty95/Project/deploy/surf_be/bin/surf_be.bin'
            sh 'scp -r deployment/dev/Dockerfile vanxuanty95@hvanxuanty.ddns.net:/home/vanxuanty95/Project/deploy/surf_be/Dockerfile'
            sh 'scp -r deployment/dev/Dockerfile vanxuanty95@hvanxuanty.ddns.net:/home/vanxuanty95/Project/deploy/surf_be/docker-compose.yml'

            sh 'ssh vanxuanty95@hvanxuanty.ddns.net cd /home/vanxuanty95/Project/deploy/surf_be/'
            sh 'ssh vanxuanty95@hvanxuanty.ddns.net docker-compose up -d'

        }
        stage('deploy'){
            steps{
                sh 'ssh host.docker.internal'
            }
        }
    }
}